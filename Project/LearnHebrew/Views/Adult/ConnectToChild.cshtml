@model LearnHebrew.Models.AdultModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div id="AdultPageSize">

    @Html.Partial("~/Views/Adult/_ReturnToMainAdultPage.cshtml", Model)

    <div class="connectChildPageDetaile">

        <h2>מי הילד שלך?</h2>
        <span>
            אם ברצונך לצפות בהתקדמות הילד שלך שרשום לאתר, אנא הזן את השם שלו ואת הסיסמא שקיבל בעת ההתחברות שלו.
        </span>
    </div>

    <div id="ConnectToChildFormContainer">
        @using (Html.BeginForm("SaveChildConnection", "Adult", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <div>
                <input type="hidden" name="AdultID" value="@Model.Adult.AdultID" />
            </div>
            <div class="connectChildInput">
                <label>הכנס את שם הילד בעת הרישום שלו</label>
                <input type="text" name="ChildName" required />
            </div>
            <div class="connectChildInput">
                <label>הכנס את הסיסמה שהילד קיבל בעת הרישום שלו</label>
                <input type="text" name="ChildPassword" />
            </div>

            <input class="connectChildBtn" type="submit" value="שמור" />
        }
    </div>
</div>

<style>
    #AdultPageSize { width: 100%; height: 100%;padding: 0px 40px; }
    .connectChildPageDetaile { margin-bottom: 20px; }
    .connectChildPageDetaile span { font-size: 18px; }
    .connectChildInput { width: 500px; padding: 10px; margin-bottom: 20px; height: 40px; }
    .connectChildInput label { float: right; }
    .connectChildInput input { float: left;  }


    input[type="button"], input[type="submit"], button {
        min-width: 100px;
        border-radius: 5px;
        border: 1px solid;
        height: 30px;
        background-color: #70bec1;
    }

    input, [type="text"] {
        min-width: 200px;
        height: 30px;
        border-radius: 5px;
        border: 1px solid;
        background: #f3f3f3;
    }

        input[type="file"] {
            padding: 3px;
        }

        input[type="checkbox"] {
            height: 20px;
        }
</style>
