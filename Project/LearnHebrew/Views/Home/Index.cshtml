
@{ 
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<script>

    function GoToChildLogin() {
        @*$.post("@Url.Action("ChildLogin", "Home")", function (data) {
            $("#childchild").html(data);
        });*@



        window.location.href = "@(Url.Action("ChildLogin", "Home"))";
    }

    function GoToAdultLogin() {
        window.location.href = "@(Url.Action("AdultLogin", "Home"))";
    }

</script>


<div id="MainPageContainer">
    <div id="HeaderChoseTypeDiv">
        <h3>מי אתה?</h3>
    </div>
    <div id="Child" onclick="GoToChildLogin()">
        <div class="UserTypeTitle">
            <span>אני ילד</span>
        </div>
        <div class="UserTypeImage">
            @*<img src="~/Pictures/children.png" />*@
        </div>
    </div>

    <div id="Adult" onclick="GoToAdultLogin()">
        <div class="UserTypeTitle">
            <span>אני מבוגר</span>
        </div>
        <div class="UserTypeImage">
            @*<img src="~/Pictures/adults.png" />*@
        </div>
    </div>
</div>

@*<div id="childchild">

</div>*@

<style>

    #MainPageContainer {
        width: 80%;
        margin: auto;
        text-align: center;
        height: 90%;
        position:relative;
    }

    #HeaderChoseTypeDiv {
        background: #e4dfdf;
        width: 100%;
        height: 20%;
        position: relative;
        margin-bottom: 20px;
    }

    #HeaderChoseTypeDiv h3 {
        position: absolute;
        top: 50%;
        left: 50%;
        transform: translate(-50%, -50%);
        margin: 0;
        font-size: 40px;
    }

    #Child, #Adult {
        width: 48%;
        height: 78%;
        background: #e4dfdf;
        display: inline-block;
        position:absolute;
        cursor:pointer;
    }

    #Child {right: 0px;}
    #Adult {left: 0px;}

    .UserTypeTitle {
        height: 20%;
        font-size: 30px;
        padding: 10px;
    }

    #Child .UserTypeImage {
        background-image: url(../Pictures/children.png);
        z-index: 10;
        width: 100%;
        height: 80%;
        background-position: center center;
        background-repeat: no-repeat;
    }

    #Adult .UserTypeImage {
        background-image: url(../Pictures/adults.png);
        z-index: 10;
        width: 100%;
        height: 80%;
        background-position: center center;
        background-repeat: no-repeat;
    }
</style>